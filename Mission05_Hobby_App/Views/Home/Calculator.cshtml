@{
    ViewData["Title"] = "Tutoring Calculator";
}

<div class="container">
    <h1>Calculate your tutoring cost</h1>

    <!--Form for entering hours-->
    <form id="calculatorForm">
        <!--Input-->
        <div class="mb-3">
            <label for="hoursInput" class="form-label">Enter the number of hours you would like to be tutored:</label>
            <input type="number" id="hoursInput" class="form-control" placeholder="Number of hours" min="1" required>
        </div>

        <!--Hourly rate-->
        <div class="mb-3">
            <label for="hourlyRate" class="form=label">Hourly Rate:</label>
            <input type="text" id="hourlyRate" class="form-control" value="50" readonly>
        </div>

        <!--Button to calculate total-->
        <div>
            <button type="button" class="btn-outline-primary" id="calculateButton">Calculate Total</button>
        </div>
    </form>

    <!--Output the total-->
    <div class="mt-3">
        <label for="totalOutput" class="form=label">Total Fee:</label>
        <input type="text" id="totalOutput" class="form-control" readonly>
    </div>

    <!-- Navigation to home page -->
    <a href="/" class="btn btn-secondary mt-3">Back to Home</a>
</div>

<!--JQuery to calculate the total-->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#calculateButton").click(function () {
                var hours = $('#hoursInput').val(); //Grab the value of hours entered
                var hourlyRate = $('#hourlyRate').val(); //Grab value of hourly rate

                //Validate that the hours is a postive number
                if (hours && hours > 0) {
                    var total = hours * hourlyRate; //Multiply to get total
                    $('#totalOutput').val(total.toFixed(2)); //Display total in the output box
                } else {
                    //Display error message if input is invalid
                    alert('Please enter a valid positive number of hours.');
                    $('#totalOutput').val(''); //Clear total output if invalid
                }
            });
        });
    </script>


}